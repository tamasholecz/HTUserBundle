{% trans_default_domain 'user' %}
{% extends '@HTUser/layout.html.twig' %}
{% block body %}
	<div class="login-wrapper">
		{% if error|default(false) %}
			<div class="w-100 alert alert-danger">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}
		<form method="post" action="{{ action|default('') }}">
			{% if csrf_token_intention|default(false) %}
				<input type="hidden" name="_csrf_token" value="{{ csrf_token(csrf_token_intention) }}">
			{% endif %}

			{#<input type="hidden" name="{{ target_path_parameter|default('_target_path') }}" value="{{ target_path|default(path('homepage')) }}">#}

			<div class="form-group field-text">
				<label for="username" class="sr-only form-control-label required">{{ 'login.username'|trans }}</label>
				<div class="form-widget form-widget-with-icon">
					<i class="fa fa-fw fa-user"></i>
					<input type="text" id="username" name="{{ username_parameter|default('_username') }}" class="form-control" placeholder="{{ 'login.username'|trans }}" value="{{ last_username|default('') }}" required autofocus>
				</div>
			</div>

			<div class="form-group field-password">
				<label for="password" class="sr-only form-control-label required">{{ 'login.password'|trans }}</label>
				<div class="form-widget form-widget-with-icon">
					<i class="fa fa-fw fa-lock"></i>
					<input type="password" id="password" name="{{ password_parameter|default('_password') }}" class="form-control" placeholder="{{ 'login.password'|trans }}" required>
				</div>
			</div>

			<div class="form-group field-button">
				<button type="submit" class="btn btn-primary btn-lg btn-block">{{ 'login.sign_in'|trans }}</button>
			</div>
		</form>
	</div>
{% endblock %}
